# Routes

# Resources
GET     /robots.txt                      controllers.Assets.at(path="/public", file = "robots.txt")
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
GET     /assets-versioned/*file          controllers.Assets.versioned(path="/public", file: Asset)
GET     /javascriptRoutes                controllers.AppController.javascriptRoutes
GET     /messages.js                     controllers.AppController.jsMessages

# Auth/User
GET     /auth/signIn                     controllers.AuthController.signIn
POST    /auth/signIn                     controllers.AuthController.signInPost
GET     /auth/signOut                    controllers.AuthController.signOut
GET     /auth/signUp                     controllers.AuthController.signUp
POST    /auth/signUp                     controllers.AuthController.signUpPost
GET     /auth/user                       controllers.AuthController.user

# Member
GET     /                                controllers.AppController.index
GET     /help                            controllers.AppController.help
GET     /articles                        controllers.ArticleController.list
GET     /articles/create/:templateId     controllers.ArticleController.create(templateId:Int)
GET     /articles/:id/delete             controllers.ArticleController.delete(id:Int)
GET     /articles/:id/edit               controllers.ArticleController.edit(id:Int)
GET     /articles/:id/preview            controllers.ArticleController.preview(id:Int)
GET     /articles/:id/saveStatus         controllers.ArticleController.saveStatus(id:Int, status:models.ContentEntity.Status)
POST    /articles/:id/tag                controllers.ArticleController.saveTag(id:Int)
GET     /articles/:seoAlias              controllers.ArticleController.view(seoAlias:String)

# Editor
GET     /articleTemplates                controllers.ArticleTemplateController.list(category: Option[models.Category] ?= None)
GET     /articleTemplates/create         controllers.ArticleTemplateController.create
GET     /articleTemplates/:id/edit       controllers.ArticleTemplateController.edit(id:Int)
POST    /articleTemplates                controllers.ArticleTemplateController.save

# Admin