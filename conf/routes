# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET  /assets/*file                controllers.Assets.at(path="/public", file)

# Home page
GET  /                            controllers.Application.index

# Authentication
GET  /login                       controllers.AuthController.login
POST /login                       controllers.AuthController.authenticate
GET  /logout                      controllers.AuthController.logout


# ArticleTemplates
GET  /articleTemplates            controllers.ArticleTemplateController.list
GET  /articleTemplates/new        controllers.ArticleTemplateController.create
GET  /articleTemplates/:id/edit   controllers.ArticleTemplateController.edit(id:Long)
POST /articleTemplates            controllers.ArticleTemplateController.save
