# Routes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
GET     /assets-versioned/*file          controllers.Assets.versioned(path="/public", file: Asset)
GET     /javascriptRoutes                controllers.Application.javascriptRoutes

# Auth/User
GET     /auth/signIn                     controllers.AuthController.signIn
POST    /auth/signIn                     controllers.AuthController.signInPost
GET     /auth/signOut                    controllers.AuthController.signOut
GET     /auth/signUp                     controllers.AuthController.signUp
POST    /auth/signUp                     controllers.AuthController.signUpPost
GET     /auth/user                       controllers.AuthController.user

# Public
GET     /                                controllers.Application.index
GET     /articles/templates              controllers.ArticleController.listArticleTemplates
GET     /articles/create/:templateId     controllers.ArticleController.create(templateId:Int)
POST    /articles/updateTag              controllers.ArticleController.updateTag
GET     /articles/:seoAlias              controllers.ArticleController.show(seoAlias:String)

# Admin
GET     /admin/articleTemplates          controllers.ArticleTemplateController.list
GET     /admin/articleTemplates/create   controllers.ArticleTemplateController.create
GET     /admin/articleTemplates/:id/show controllers.ArticleTemplateController.show(id:Int)
GET     /admin/articleTemplates/:id/edit controllers.ArticleTemplateController.edit(id:Int)
POST    /admin/articleTemplates          controllers.ArticleTemplateController.save